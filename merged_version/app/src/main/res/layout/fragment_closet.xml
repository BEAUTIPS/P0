<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.ClosetPage.ClosetFragment">

    <TextView
        android:id="@+id/topText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_margin="24dp"
        android:layout_marginTop="45dp"
        android:fontFamily="Montserrat"
        android:text="Matched for You"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:gravity="top"
        android:layout_alignParentTop = "true"
        android:textSize="18dp" />
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="false"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:orientation="horizontal"
                android:scrollbars="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:fontFamily="Montserrat"
                    android:text="Body shape"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_weight="2"
                    android:fontFamily="Montserrat"
                    android:gravity="right"
                    android:text="Round"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:scrollbars = "vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:textSize="14dp"
                    android:fontFamily="Montserrat"
                    android:text="Occasion"
                    android:textColor="@color/black"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/occasion"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_weight="2"
                    android:fontFamily="Montserrat"
                    android:text="+"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/hidelist"
                android:layout_width="match_parent"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:visibility="gone"
                android:background="@color/black"
                android:layout_height="35dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:textSize="14dp"
                    android:fontFamily="Montserrat"
                    android:text="Party"
                    android:textColor="@color/white"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_weight="2"
                    android:fontFamily="Montserrat"
                    android:text="Beach"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_weight="3"
                    android:fontFamily="Montserrat"
                    android:text="Daily Life"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:scrollbars = "vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:textSize="14dp"
                    android:fontFamily="Montserrat"
                    android:text="Dress Code"
                    android:textColor="@color/black"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_weight="2"
                    android:fontFamily="Montserrat"
                    android:text="Casul"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:scrollbars = "vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:textSize="14dp"
                    android:fontFamily="Montserrat"
                    android:text="Size"
                    android:textColor="@color/black"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_weight="2"
                    android:fontFamily="Montserrat"
                    android:text="Top M"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_weight="2"
                    android:fontFamily="Montserrat"
                    android:text="Bottom M"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:scrollbars = "vertical"
                android:layout_height="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:textSize="14dp"
                    android:fontFamily="Montserrat"
                    android:text="Clear All"
                    android:textColor="@color/black"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:background="#FF629C"
                    android:textColor="@color/white"
                    android:layout_weight="2"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Closet_results_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </RelativeLayout>

    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/toTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp" />
</RelativeLayout>