<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="171dp"
    android:layout_height="273dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <ImageView
                android:id="@+id/post_pic"
                android:layout_width="171dp"
                android:layout_height="273dp"
                android:scaleType="centerCrop"
                android:src="@drawable/test" />


            <ImageView
                android:id="@+id/stylist_profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="-10px"
                android:layout_marginTop="530px"
                android:cropToPadding="true"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:src="@drawable/myimage" />


            <TextView
                android:id="@+id/stylist_name_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="219dip"
                android:layout_marginBottom="5dip"
                android:fontFamily="@font/montserrat"
                android:text="Abby"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/thumb"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="103dip"
                android:layout_marginTop="220dip"
                android:layout_marginBottom="5dip"
                android:elevation="3px"
                android:src="@drawable/thumbs" />

            <TextView
                android:id="@+id/num_thums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="128dip"
                android:layout_marginTop="219dip"
                android:layout_marginBottom="5dip"
                android:fontFamily="@font/montserrat"
                android:text="2k"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

        </FrameLayout>






    </LinearLayout>



</androidx.cardview.widget.CardView>