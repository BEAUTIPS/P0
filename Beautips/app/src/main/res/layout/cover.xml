<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_150"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/beautips"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="58dp"
        android:layout_marginRight="86dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/lao_mn"
        android:gravity="center_horizontal"
        android:text="Beautips"
        android:textColor="@color/white"
        android:textSize="48dp" />

    <TextView
        android:id="@+id/your_body_s"
        android:layout_width="256dp"
        android:layout_height="20dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/lao_mn"
        android:gravity="center_horizontal"
        android:text="Your body shape's sytle advior"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <ImageButton
        android:id="@+id/star_now"
        android:layout_width="173dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="300dp"
        android:layout_marginButton="900dp"
        android:background="@drawable/frame_419"
        android:gravity="center_horizontal"
        android:text="Start Now"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/log_in"
        android:layout_width="153dp"
        android:layout_height="40dp"

        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:text="Log In"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:gravity="center_horizontal|top"
        />



</LinearLayout>